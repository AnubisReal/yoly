	<script is:inline>
		document.addEventListener('DOMContentLoaded', () => {
			// Random Flare Effect
			function addRandomFlare(element) {
				const flare = element.querySelector('::before') || element;
				const randomDelay = Math.random() * 5000 + 2000; // Entre 2-7 segundos
				
				setTimeout(() => {
					element.style.setProperty('--flare-active', '1');
					setTimeout(() => {
						element.style.setProperty('--flare-active', '0');
						addRandomFlare(element);
					}, 1500);
				}, randomDelay);
			}

			// Aplicar a todos los elementos con flare
			const navContent = document.querySelector('.nav-content');
			const videoContainer = document.querySelector('.video-container');
			const platformBars = document.querySelectorAll('.platform-bar');
			const socialCircles = document.querySelectorAll('.social-circle');

			if (navContent) addRandomFlare(navContent);
			if (videoContainer) addRandomFlare(videoContainer);
			platformBars.forEach(bar => addRandomFlare(bar));
			socialCircles.forEach(circle => addRandomFlare(circle));
		});

		// Copos de nieve frontales aleatorios
		function createFrontSnowflake() {
			const container = document.querySelector('.snowflakes-front');
			if (!container) return;

			const snowflake = document.createElement('div');
			snowflake.className = 'snowflake-front-dynamic';
			snowflake.textContent = Math.random() > 0.5 ? '‚ùÖ' : '‚ùÜ';
			
			// Propiedades aleatorias
			const left = Math.random() * 100;
			const size = 2.5 + Math.random() * 1.5; // 2.5em - 4em
			const duration = 12 + Math.random() * 6; // 12-18s
			const swayDuration = 3 + Math.random() * 3; // 3-6s
			const swayAmount = 30 + Math.random() * 40; // 30-70px
			const rotation = 360 + Math.random() * 360; // 360-720 grados
			
			snowflake.style.left = `${left}%`;
			snowflake.style.fontSize = `${size}em`;
			snowflake.style.setProperty('--fall-duration', `${duration}s`);
			snowflake.style.setProperty('--sway-duration', `${swayDuration}s`);
			snowflake.style.setProperty('--sway-amount', `${swayAmount}px`);
			snowflake.style.setProperty('--rotation', `${rotation}deg`);
			
			container.appendChild(snowflake);
			
			// Eliminar despu√©s de que termine la animaci√≥n
			setTimeout(() => {
				snowflake.remove();
			}, duration * 1000);
		}

		// Crear copos frontales ocasionalmente
		function scheduleNextFrontSnowflake() {
			const delay = 35000 + Math.random() * 15000; // 35-50 segundos
			setTimeout(() => {
				createFrontSnowflake();
				scheduleNextFrontSnowflake();
			}, delay);
		}

		// Iniciar despu√©s de 2 segundos
		setTimeout(() => {
			createFrontSnowflake();
			scheduleNextFrontSnowflake();
		}, 2000);
	</script>
